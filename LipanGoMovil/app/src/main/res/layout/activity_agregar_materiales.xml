<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="android.alberto.app.lipangomovil.Agregar_materiales">
    <include layout="@layout/toolbar_registrar_materiales"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/include4"
        android:layout_height="0dp"
        android:layout_width="0dp">
        </include>


    <Button
        android:id="@+id/registra_produccion"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="registrar_materiales"
        android:text="Registrar Materiales"
        android:textAppearance="@style/AppTheme.FloatingLabel"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/include4" />

    <Button
        android:id="@+id/refrescar"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refrescar"
        android:textAppearance="@style/AppTheme.FloatingLabel"
        tools:layout_conversion_absoluteX="181dp"
        tools:layout_conversion_absoluteY="99dp"
        tools:layout_conversion_absoluteWidth="88dp"
        tools:layout_conversion_absoluteHeight="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/include4"
        app:layout_constraintRight_toLeftOf="@+id/regresar"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/registra_produccion"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/regresar"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:textAppearance="@style/AppTheme.FloatingLabel"
        tools:layout_conversion_absoluteX="289dp"
        tools:layout_conversion_absoluteY="99dp"
        tools:layout_conversion_absoluteWidth="88dp"
        tools:layout_conversion_absoluteHeight="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/include4"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />


    <TextView
        android:text="Lista de Materiales"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textColor="#1040ff"
        tools:layout_conversion_absoluteX="10dp"
        tools:layout_conversion_absoluteY="157dp"
        tools:layout_conversion_absoluteWidth="364dp"
        tools:layout_conversion_absoluteHeight="26dp"
        tools:layout_editor_absoluteX="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/registra_produccion"
        android:id="@+id/textView" />




    <ListView
        android:id="@android:id/list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cacheColorHint="@color/colorAccent"
        android:divider="@color/indigo"
        android:dividerHeight="15dp"
        android:drawSelectorOnTop="false"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="193dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteHeight="374dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="384dp"
        android:layout_height="374dp"
        android:text=""

        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="193dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteHeight="374dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</android.support.constraint.ConstraintLayout>
