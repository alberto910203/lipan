<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="80dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="80dp"
    tools:context="android.alberto.app.lipangomovil.Editar_produccion">

    <include
        layout="@layout/toolbar_edicion_produccion"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        android:id="@+id/include3"></include>

    <Button
        android:id="@+id/irmenu"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir al menu"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/include3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/dataextra2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fecha"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/irmenu"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/dataextra1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="usuario"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/irmenu"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dataextra2"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.971" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Materiales"
        android:textColor="@color/colorPrimary"
        android:textSize="21sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/agregar_material"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintTop_toTopOf="@+id/agregar_material"
        android:layout_marginTop="36dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produccion"
        android:textColor="@color/colorPrimary"
        android:textSize="21sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pandulce"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintTop_toTopOf="@+id/pandulce"
        android:layout_marginTop="35dp" />

    <ImageView
        android:id="@+id/agregar_material"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/ic_menu"
        android:layout_marginRight="89dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/dataextra1" />

    <ImageView
        android:id="@+id/pandulce"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_marginTop="57dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/agregar_material"
        app:srcCompat="@mipmap/ic_pan_blanco2"
        android:layout_marginRight="89dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

